#include<stdio.h>
int main() {
 
       int x=0,n,a[50];
       scanf("%d",&n);
       for(int i=0;i<n;i++)
       {
          int c=0;
          for(int j=0;j<3;j++)
          {
           scanf("%d",&a[j]);
           if(a[j]==1)
           {
               c++;
               if(c==2)
               {
                   x++;
               }
           }
          }
       }
 
  printf("%d\n",x);
 
return 0;
}
